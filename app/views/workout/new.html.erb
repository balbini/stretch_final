<div class="container">
  <h1>Add Workout</h1>
  <%= form_for @workout do |u| %>
    <div>
      <%= u.text_field :workout_type, placeholder: 'Weights, Running' %>
    </div>
    <div>
      <%= u.text_field :exercises, placeholder: 'Exercises, Distance Run' %>
    </div>
    <div>
      <%= u.text_area :experience, placeholder: 'How did the workout feel?' %>
    </div>
    <%= hidden_field(:workout, :user_id, :value => current_user.id) %>
    <%= u.submit %>
  <% end %>
</div>
